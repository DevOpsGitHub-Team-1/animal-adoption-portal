{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourceLocation": {
            "defaultValue": "australiaeast",
            "type": "String"
        },
        "tenantGuid": {
            "type": "String"
        },
        "appServicePlanName": {
            "type": "String"
        },
        "keyVaultName": {
            "type": "String"
        },
        "webAppName": {
            "type": "String"
        },
        "resourceGroupServicePrincipalManagedApplicationObjectId": {
            "type": "String"
        }
    },
    "variables": {
        "keyVaultSecretNameSimulatedFailureChance": "SimulatedFailureChance",
        "keyVaultSecretNameGlobalPassword": "GlobalPassword"
    },
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults",
            "apiVersion": "2018-02-14",
            "name": "[parameters('keyVaultName')]",
            "location": "[parameters('resourceLocation')]",
            "dependsOn": [],
            "tags": {},
            "properties": {
                "enabledForDeployment": false,
                "enabledForTemplateDeployment": false,
                "enabledForDiskEncryption": false,
                "enableRbacAuthorization": false,
                "accessPolicies": [
                    {
                        "tenantId": "[parameters('tenantGuid')]",
                        "objectId": "[parameters('resourceGroupServicePrincipalManagedApplicationObjectId')]",
                        "permissions": {
                            "keys": [],
                            "secrets": [
                                "Get",
                                "List",
                                "Set",
                                "Delete",
                                "Recover",
                                "Backup",
                                "Restore"
                            ],
                            "certificates": []
                        }
                    },
                    {
                        "objectId": "ad3b87f6-b582-4a05-90f8-060cf32256a7",
                        "tenantId": "[parameters('tenantGuid')]",
                        "permissions": {
                            "keys": [
                                "Get",
                                "List",
                                "Update",
                                "Create",
                                "Import",
                                "Delete",
                                "Recover",
                                "Backup",
                                "Restore"
                            ],
                            "secrets": [
                                "Get",
                                "List",
                                "Set",
                                "Delete",
                                "Recover",
                                "Backup",
                                "Restore"
                            ],
                            "certificates": [
                                "Get",
                                "List",
                                "Update",
                                "Create",
                                "Import",
                                "Delete",
                                "Recover",
                                "Backup",
                                "Restore",
                                "ManageContacts",
                                "ManageIssuers",
                                "GetIssuers",
                                "ListIssuers",
                                "SetIssuers",
                                "DeleteIssuers"
                            ]
                        }
                    }
                ],
                "tenantId": "[parameters('tenantGuid')]",
                "sku": {
                    "name": "Standard",
                    "family": "A"
                },
                "enableSoftDelete": true,
                "softDeleteRetentionInDays": "90",
                "networkAcls": {
                    "defaultAction": "allow",
                    "bypass": "AzureServices",
                    "ipRules": [],
                    "virtualNetworkRules": []
                }
            }
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2018-11-01",
            "name": "[parameters('appServicePlanName')]",
            "location": "[parameters('resourceLocation')]",
            "dependsOn": [],
            "sku": {
                "Tier": "Standard",
                "Name": "S1"
            },
            "kind": "linux",
            "properties": {
                "name": "[parameters('appServicePlanName')]",
                "workerSize": "0",
                "workerSizeId": "0",
                "numberOfWorkers": "1",
                "reserved": true
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "name": "[parameters('webAppName')]",
            "location": "[parameters('resourceLocation')]",
            "kind": "app,linux",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]"
             ],
            "properties": {
                "name": "[parameters('webAppName')]",
                "siteConfig": {
                    "appSettings": [],
                    "linuxFxVersion": "DOTNETCORE|3.1",
                    "alwaysOn": true
                },
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
                "clientAffinityEnabled": false
            }
        }
    ],
    "outputs": {}
}